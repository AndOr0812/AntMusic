#!/bin/sh

LOG="/var/log/antrota.log"

echo "Starting..." >$LOG

if [ -x /config/tz ]
then
	. /config/tz
fi

POOL="pool.ntp.org"
NTPD="/usr/local/bin/ntpdate"

if [ -x $NTPD ]
then
	echo "Setting Date and Time using $POOL" >>$LOG
	$NTPD -b -s -u $POOL
fi

DATE=`/bin/date +"%c"`

echo "Date: $DATE" >>$LOG

TARGET="/config/cgminer.conf"

while true
do
	while true
	do
		sleep 1

		SEC=`/bin/date +"%S"`

		if [ "$SEC" == "00" ]
		then
			break
		fi
	done

	HOUR=`/bin/date +"%H"`
	MIN=`/bin/date +"%M"`

	if [ "$MIN" = "00" ]
	then
		echo "Time: $HOUR:$MIN:$SEC" >>$LOG

		SOURCE="/config/antrota/cgminer.conf.$HOUR"

		echo "Looking for $SOURCE" >>$LOG

		if [ -e $SOURCE ]
		then
			echo "Changing to new mode"

			/bin/cp -a $SOURCE $TARGET

			echo "Restarting miner" >>$LOG
			/etc/init.d/cgminer.sh restart >>$LOG
			echo "Done" >>$LOG
		else
			echo "Not found" >>$LOG
		fi
	fi
done
