#!/bin/sh

LOG="/var/log/antthrottle.log"

echo "Starting... " >$LOG

PATH=$PATH:/bin:/usr/bin:/usr/local/bin

MAXTEMP=60
MINTEMP=30
REFTEMP=0

CONF="/config/antthrottle.conf"
STAT="/usr/local/bin/antstat"

if [ -x $CONF ]
then
	echo "No $CONF file found, using defaults" >>$LOG
else
	$CONF
fi

if [ ! -x $STAT ]
then
	echo "$STAT not found, aborting" >>$LOG
	exit 0
fi

CODE400="3:400:0f82"
CODE375="3:375:0e82"
CODE350="3:350:0d82"
CODE325="4:325:0c82"
CODE300="4:300:0b82"
CODE275="4:275:0a82"
CODE250="5:250:0982"
CODE225="5:225:0882"
CODE200="6:200:0782"

LESS400="375"
LESS375="350"
LESS350="325"
LESS325="300"
LESS300="275"
LESS275="250"
LESS250="225"
LESS225="200"

MORE375="400"
MORE350="375"
MORE325="350"
MORE300="325"
MORE275="300"
MORE250="275"
MORE225="250"
MORE200="225"

while true
do
        TEMP=`antstat TEMP`
        FREQ=`antstat FREQ`

	if [ "$TEMP" -ne "$REFTEMP" ]
	then
		echo "Average Temperature: $TEMP" >>$LOG
		REFTEMP=$TEMP
	fi

	if [ "$TEMP" -gt "$MAXTEMP" ]
	then
		echo "Too Hot!" >>$LOG

		eval LESS='$'LESS$FREQ
		eval REPLACE='$'CODE$FREQ
		eval WITH='$'CODE$LESS

		if [ "$REPLACE" = "" ]
		then
			echo "Unsupported clock frequency ($FREQ). Please set to one of 200MHz to 400MHz in steps of 25MHz." >>$LOG
		else
			if [ "$WITH" = "" ]
			then
				echo "Reached minimum supported frequency ($FREQ). Not able to reduce further. Check your equipment!" >>$LOG
			else
				echo "Current frequency is $FREQ, dropping to $LESS" >>$LOG

				sed -i -- 's/'$REPLACE'/'$WITH'/g' /config/cgminer.conf

				/etc/init.d/cgminer.sh restart >>$LOG
			fi
		fi
	fi

	if [ "$TEMP" -lt "$MINTEMP" ]
	then
		echo "Too Cool!" >>$LOG

		eval MORE='$'MORE$FREQ
		eval REPLACE='$'CODE$FREQ
		eval WITH='$'CODE$MORE

		if [ "$REPLACE" = "" ]
		then
			echo "Unsupported clock frequency ($FREQ). Please set to one of 200MHz to 400MHz in steps of 25MHz." >>$LOG
		else
			if [ "$WITH" = "" ]
			then
				echo "Reached maximum supported frequency ($FREQ). Not able to increase further. You can increase this by changing the code." >>$LOG
			else
				echo "Current frequency is $FREQ, raising to $MORE" >>$LOG

				sed -i -- 's/'$REPLACE'/'$WITH'/g' /config/cgminer.conf

				/etc/init.d/cgminer.sh restart >>$LOG
			fi
		fi
	fi
	
	sleep 30
done
